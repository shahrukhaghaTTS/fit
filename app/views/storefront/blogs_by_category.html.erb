<h3>All <%= @category.name %></h3>

<div class="row">
	<% @blogs_by_cat.each do |blog| %>
	<div class="col-sm-12 col-lg-6">
    <div class="panel panel-default">
			<div class="panel-heading">
				<h3><%= link_to blog.title, blog %></h3>
			</div>
			<div class="panel-body">
				by <%= blog.author %><br>
				<h6><i>Posted: <%= blog.created_at.strftime('%-m/%d/%Y at %I:%M%p') %></i></h6>
          <div class="span6">
            <div class="flex-video widescreen"><iframe src="<%= blog.medialink %>" frameborder="0" allowfullscreen=""></iframe></div>
          </div>
				<p><%= link_to "Read More", blog, class: "btn btn-info btn-block" %></p>
			</div>
		</div>
	</div>
	<% end %>
</div>
